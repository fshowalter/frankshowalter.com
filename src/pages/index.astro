---
import React from "react";

import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Layout } from "~/components/layout/Layout";
import { getRecentUpdatesProps } from "~/features/recent-updates/getRecentUpdatesProps";
import { RecentUpdates } from "~/features/recent-updates/RecentUpdates";

const recentUpdatesProps = await getRecentUpdatesProps();

const deck = `I write stuff. Mostly <a class="inline-block relative text-accent after:absolute after:bottom-0 after:left-0 after:h-px after:w-full
          after:origin-center after:scale-x-0 after:bg-accent
          after:transition-transform after:duration-500
          hover:after:scale-x-100" href="http://www.franksmovielog.com/">movie reviews</a>, sometimes <a class="text-accent inline-block relative text-accent after:absolute after:bottom-0 after:left-0 after:h-px after:w-full
          after:origin-center after:scale-x-0 after:bg-accent
          after:transition-transform after:duration-500
          hover:after:scale-x-100" href="http://www.franksbooklog.com/">book reviews</a>.`;
const metaDescription =
  "Frank Showalter: writer of stuff. Mostly movie reviews, sometimes book reviews, and all-around swell guy.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{ description: "Frank Showalter", type: "website" }}
  title="Frank Showalter"
>
  <Layout
    backdrop={{
      centerText: true,
      deck: React.createElement("span", {
        dangerouslySetInnerHTML: { __html: deck },
      }),
      size: "full",
      title: "Frank Showalter",
    }}
    className="bg-subtle"
  >
    <RecentUpdates {...recentUpdatesProps} />
  </Layout>
</AstroPageShell>
