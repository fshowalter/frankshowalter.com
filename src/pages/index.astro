---
import React from "react";

import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Layout } from "~/components/layout/Layout";
import { getHomeProps } from "~/features/home/getHomeProps";
import { Home } from "~/features/home/Home";

const homeProps = await getHomeProps();

const deck = `I write stuff. Mostly <a class="inline-block relative text-accent after:absolute after:bottom-0 after:left-0 after:h-px after:w-full
          after:origin-center after:scale-x-0 after:bg-accent
          after:transition-transform after:duration-500
          hover:after:scale-x-100" href="#movie-reviews">movie reviews</a>, sometimes <a class="text-accent inline-block relative after:absolute after:bottom-0 after:left-0 after:h-px after:w-full
          after:origin-center after:scale-x-0 after:bg-accent
          after:transition-transform after:duration-500
          hover:after:scale-x-100" href="#book-reviews">book reviews</a>.`;
const metaDescription = "Mostly movie reviews, sometimes book reviews.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{ description: "Frank Showalter", type: "website" }}
  title="Frank Showalter"
>
  <Layout
    backdrop={{
      centerText: true,
      deck: React.createElement("span", {
        dangerouslySetInnerHTML: { __html: deck },
      }),
      size: "full",
      title: "Frank Showalter",
    }}
    className="bg-subtle"
  >
    <Home {...homeProps} />
  </Layout>
</AstroPageShell>
