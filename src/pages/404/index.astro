---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getLayoutBackdropImageProps } from "~/components/layout/getLayoutBackdropImageProps";
import { Layout } from "~/components/layout/Layout";
import { getRecentUpdatesProps } from "~/features/recent-updates/getRecentUpdatesProps";
import { RecentUpdates } from "~/features/recent-updates/RecentUpdates";

const recentUpdatesProps = await getRecentUpdatesProps();

const title = "404 Not Found";
const deck = `"It's hard for us here to be reporting this to you, but it does seem to be a fact."`;
const backdropImageProps = await getLayoutBackdropImageProps("not-found");
---

<AstroPageShell
  canonical={false}
  meta={{ description: deck }}
  openGraph={false}
  title={title}
>
  <Layout
    backdrop={{
      backdropImageProps,
      centerText: true,
      deck,
      size: "full",
      title,
    }}
    className="flex flex-col bg-subtle"
    logo={true}
  >
    <RecentUpdates {...recentUpdatesProps} /></Layout
  >
</AstroPageShell>
